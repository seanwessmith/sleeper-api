{
  "name": "sleeper-api",
  "version": "1.0.0",
  "homepage": "https://github.com/seanwessmith/sleeper-api",
  "author": "Sean Smith <seanwessmith@gmail.com>",
  "description": "Sleeper api from https://sleeper.com/",
  "source": "src/sleeper.js",
  "module": "dist/sleeper.module.js",
  "main": "dist/sleeper.js",
  "umd:main": "dist/sleeper.umd.js",
  "scripts": {
    "build": "bun build --format esm --dts --minify src --outdir ./build && tsc  --emitDeclarationOnly --isolatedDeclarations --declarationDir ./build",
    "test": "bun test",
    "release": "bun run build && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && bun publish"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": 1
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "rest",
    "jan",
    "network",
    "model",
    "ajax"
  ],
  "repository": "seanwessmith/sleeper-api",
  "licence": "MIT",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bun": "^1.1.10",
    "@types/node": "^22.5.5",
    "@types/sinon": "^17.0.3",
    "eslint": "^9.11.0",
    "microbundle": "^0.15.1",
    "sinon": "^19.0.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bun": "^1.1.29"
  }
}
